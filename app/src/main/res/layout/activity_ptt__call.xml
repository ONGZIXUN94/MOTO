<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ptt_button1"
    android:id="@+id/ptt_background"
    tools:context="com.example.dqw648.moto.PTT_Call">

    <Button
        android:id="@+id/pttButton"
        android:layout_width="377dp"
        android:layout_height="365dp"
        android:layout_marginBottom="17dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintVertical_bias="1.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tv_callname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHU YANG"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pttButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@+id/tv_callmode"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />

    <TextView
        android:id="@+id/tv_callmode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Mode"
        app:layout_constraintTop_toBottomOf="@+id/tv_callname"
        app:layout_constraintBottom_toTopOf="@+id/pttButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_above="@+id/pttButton"
        android:layout_alignLeft="@+id/tv_callname"
        android:layout_alignStart="@+id/tv_callname" />
</RelativeLayout>
