<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:text="Name: Min Kee"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/tv_coreid" />

    <TextView
        android:id="@+id/tv_coreid"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:text="ID:ABC123"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/tv_result" />

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="125dp"
        android:layout_height="65dp"
        android:text="Polisman"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tv_coreid" />

    <Button
        android:id="@+id/btn_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tv_result"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>